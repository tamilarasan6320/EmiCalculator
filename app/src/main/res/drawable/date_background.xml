<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/alternate"/>
            <stroke android:width="1dp" android:color="#c7c6c6"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/alternate"/>
            <stroke android:width="1dp" android:color="#c7c6c6"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/alternate"/>
            <stroke android:width="1dp" android:color="#c7c6c6"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/layout_background"/>
            <corners android:radius="300dp"/>
            <stroke android:width="1dp" android:color="#c7c6c6"/>
            <gradient android:startColor="@color/white" android:endColor="@color/white" android:angle="180"/>
        </shape>
    </item>
</selector>
