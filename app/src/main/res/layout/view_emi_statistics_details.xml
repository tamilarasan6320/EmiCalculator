<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Principal\nAmount" android:layout_weight="1.5" style="@style/result_view_lable"/>
        <TextView android:text="Interest\nRate" style="@style/result_view_lable"/>
        <TextView android:text="Tenure\n(Month)" style="@style/result_view_lable"/>
        <TextView android:layout_gravity="center" android:text="EMI" style="@style/result_view_lable"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
        <TextView android:id="@+id/activity_statistics_tv_principal_amount" android:layout_weight="1.5" style="@style/result_view"/>
        <TextView android:id="@+id/activity_statistics_tv_interest_rate" style="@style/result_view"/>
        <TextView android:id="@+id/activity_statistics_tv_tenure" style="@style/result_view"/>
        <TextView android:id="@+id/activity_statistics_tv_emi" style="@style/result_view"/>
    </LinearLayout>
</LinearLayout>
