<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:id="@+id/navigation_menu"
    >

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="end"
        android:id="@+id/drawer_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_toolbar"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:id="@+id/toolbar"
                android:background="@drawable/ic_menu"
                android:backgroundTint="@color/white"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMI"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/tv1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculator"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/secondaryColor"
                    android:layout_toRightOf="@+id/tv1"
                    />

            </LinearLayout>



        </RelativeLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >




                <RelativeLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="160dp"
                            android:layout_height="170dp"
                            android:layout_marginBottom="20dp"
                            app:rippleColor="@color/secondaryLightColor"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/card1"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Emi Calculator"
                                android:layout_gravity="center"
                                android:drawableTop="@drawable/ic_emi_calculator"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                />
                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="160dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp"
                            android:id="@+id/card3"

                            app:rippleColor="@color/secondaryLightColor"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check Eligibility"
                                android:layout_gravity="center"
                                android:drawableTop="@drawable/ic_check_eligibility"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                />


                        </com.google.android.material.card.MaterialCardView>






                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        >

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="160dp"
                            android:layout_height="150dp"
                            app:cardElevation="2dp"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/card2"
                            app:cardCornerRadius="10dp"
                            app:rippleColor="@color/secondaryLightColor"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BT  + Top       Calculator"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:drawableTop="@drawable/ic_bt_calculator"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                />


                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="160dp"
                            android:layout_height="170dp"
                            app:cardCornerRadius="10dp"
                            android:id="@+id/card4"

                            app:cardElevation="2dp"
                            app:rippleColor="@color/secondaryLightColor"


                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Compare Loan"
                                android:layout_gravity="center"
                                android:drawableTop="@drawable/ic_compare_loan"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                />


                        </com.google.android.material.card.MaterialCardView>






                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Help"
                    android:textColor="@color/primaryColor"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"



                    >

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:padding="20dp"


                        >


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_row="0"
                            android:layout_column="0"

                            >
                            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/r1"

                                android:background="@drawable/round_btn"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_doc_req"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Document Required"
                                android:textAlignment="center"
                                android:textColor="@color/primaryColor"
                                android:gravity="center_horizontal" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_row="0"
                            android:layout_column="1"
                            >
                            <ImageButton
                                android:layout_width="60dp"
                                android:id="@+id/r2"

                                android:layout_height="60dp"
                                android:background="@drawable/round_btn"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_emi_per_laks"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EMI Per  Lakhs"
                                android:textAlignment="center"
                                android:textColor="@color/primaryColor"
                                android:gravity="center_horizontal" />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="2"
                            >
                            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/r3"

                                android:background="@drawable/round_btn"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_faq"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="      FAQs"
                                android:textAlignment="center"
                                android:textColor="@color/primaryColor"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_marginTop="20dp"
                            >
                            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_btn"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_current_roi"
                                android:id="@+id/r4"

                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current  ROI"
                                android:textAlignment="center"
                                android:textColor="@color/primaryColor"
                                android:gravity="center_horizontal" />


                        </LinearLayout>


                    </GridLayout>




                </RelativeLayout>




            </LinearLayout>





        </LinearLayout>










        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/secondaryLightColor"
            android:layout_gravity="start"
            app:itemTextColor="@color/primaryColor"
            app:menu="@menu/activity_main_drawer"
            app:itemIconTint="@color/primaryDarkColor"
            app:itemVerticalPadding="20dp"
            android:layout_marginTop="20dp"

            />




    </androidx.drawerlayout.widget.DrawerLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>