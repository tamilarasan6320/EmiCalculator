<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/design_bottom_sheetcl"
    android:background="@android:color/transparent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    >






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/r_lyt1"

                >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="#eceff1"
                    android:layout_marginBottom="20dp"
                    android:padding="2dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/loan_based_on_salary"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:id="@+id/tv_1"
                        />

                    <TextView
                        android:id="@+id/activity__eligible_tv_loan_based_on_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_below="@+id/tv_1"
                        android:textSize="16dp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="#eceff1"
                    android:padding="2dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:gravity="center"


                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_based_on_agreement"
                        android:textSize="12dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/poppinsregular"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tv_3"
                        />

                    <TextView
                        android:id="@+id/activity__eligible_tv_agreement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_3"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="#eceff1"
                    android:layout_marginBottom="20dp"
                    android:padding="2dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center"


                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_based_on_property"
                        android:textColor="@color/red"
                        android:id="@+id/tv_2"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppinsregular"

                        android:gravity="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/activity__eligible_tv_property"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_below="@id/tv_2"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        />





                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="#eceff1"
                    android:padding="2dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:gravity="center"


                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/emi_per_lakhs"
                        android:textSize="12dp"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppinsregular"

                        android:id="@+id/tv_4"

                        />

                    <TextView
                        android:id="@+id/activity__eligible_tv_emi_per_lac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:layout_below="@+id/tv_4"

                        />





                </RelativeLayout>



            </GridLayout>





            </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_lyt1"
        android:gravity="center"
        android:background="#eceff1"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"



            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimum Eligible Loan Amount"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppinsregular"
                />
            <TextView
                android:id="@+id/activity__eligible_tv_minimum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/primaryColor"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/activity__eligible_tv_emi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(EMI : 0)"
                android:gravity="center"
                android:layout_weight="1"
                />




        </LinearLayout>


    </RelativeLayout>









</RelativeLayout>
