<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheetcl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/r_lyt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="#eceff1"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansregular"
                    android:gravity="center"
                    android:text="@string/loan_based_on_salary"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity__eligible_tv_loan_based_on_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_1"
                    android:fontFamily="@font/sansregular"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0"
                    android:textAlignment="gravity"
                    android:textColor="@color/primaryColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#eceff1"
                android:gravity="center"
                android:padding="10dp"


                >


                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansregular"
                    android:gravity="center"
                    android:text="@string/loan_based_on_agreement"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity__eligible_tv_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_3"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/sansregular"
                    android:text="0"
                    android:textColor="@color/primaryColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginBottom="20dp"
                android:background="#eceff1"
                android:gravity="center"
                android:padding="10dp"


                >


                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansregular"
                    android:gravity="center"
                    android:text="@string/loan_based_on_property"
                    android:textColor="@color/red"

                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity__eligible_tv_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/sansregular"
                    android:text="0"
                    android:textColor="@color/primaryColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:background="#eceff1"
                android:gravity="center"
                android:padding="10dp"


                >


                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansregular"
                    android:gravity="center"
                    android:text="@string/emi_per_lakhs"
                    android:textColor="@color/red"
                    android:textSize="10dp"

                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/activity__eligible_tv_emi_per_lac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:fontFamily="@font/sansregular"
                    android:text="0"
                    android:textColor="@color/primaryColor"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />


            </RelativeLayout>


        </GridLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r_lyt1"
        android:background="#eceff1"
        android:gravity="center"
        android:layout_marginTop="10dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"



            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sansregular"
                android:gravity="center"
                android:textSize="10dp"
                android:text="Minimum Eligible Loan Amount"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity__eligible_tv_minimum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:fontFamily="@font/sansregular"
                android:textColor="@color/primaryColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity__eligible_tv_emi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/sansregular"
                android:text="(EMI : 0)" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
