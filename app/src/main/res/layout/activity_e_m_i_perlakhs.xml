<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EMI_perlakhsActivity"
    android:background="@drawable/bg"
    >
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_toolbar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/toolbar"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:backgroundTint="@color/white"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMI"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tv1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Per Lakhs"
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/secondaryColor"
                        android:layout_toRightOf="@+id/tv1"
                        />

                </LinearLayout>






            </RelativeLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="35dp"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="3dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/primaryColor"
                    style="@style/Widget.Design.TextInputLayout"
                    android:hint="@string/interest_rate_percent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etInterestRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="5"
                        android:backgroundTint="@color/primaryColor"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        android:inputType="numberDecimal"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="3dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/primaryColor"
                    style="@style/Widget.Design.TextInputLayout"
                    android:hint="@string/loan_tenure_months">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTenure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:backgroundTint="@color/primaryColor"
                        android:textColor="@color/primaryColor"
                        android:textColorHint="@color/primaryColor"
                        />
                </com.google.android.material.textfield.TextInputLayout>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/calculate_btn"
                    android:textStyle="bold"
                    android:backgroundTint="@color/secondary"
                    android:text="Calculate"
                    android:layout_gravity="bottom"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/emitxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_margin="5dp"
                            android:textColor="@color/primaryDarkColor"
                            android:textStyle="bold"
                            android:text="EMI = 0"/>


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>









    </LinearLayout>
    <WebView
        android:layout_below="@+id/l1"
        android:id="@+id/activity_wb_common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />







</RelativeLayout>