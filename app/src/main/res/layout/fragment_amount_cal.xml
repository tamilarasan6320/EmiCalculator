<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/bg"
    tools:context=".calculate_emi.Emi_calFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Calculate EMI"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/reset"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_refresh_24"/>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_share_24"/>

            </LinearLayout>




        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emi"
                            android:textColor="@color/primaryColor"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currency_symbol"
                                android:textColor="@color/primaryColor"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/emi_et"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/primaryColor"
                                android:inputType="number"
                                android:text=""
                                android:textSize="20dp"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/emi_rs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:valueFrom="0"
                        android:valueTo="5000000"
                        app:haloColor="@color/primaryColor"
                        app:haloRadius="15dp"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/white"
                        app:thumbRadius="8dp"
                        android:stepSize="50000"
                        app:thumbStrokeColor="@color/primaryColor"
                        app:thumbStrokeWidth="2dp"
                        app:trackColorActive="@color/primaryColor"
                        app:trackColorInactive="#e0e0e0" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/interest_rate"
                            android:textColor="@color/primaryColor"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="5dp"
                            android:padding="10dp">



                            <EditText
                                android:id="@+id/interest_et"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/primaryColor"
                                android:inputType="numberDecimal"
                                android:maxLength="5"
                                android:text=""
                                android:textSize="20dp"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold"
                                android:textSize="20dp"


                                />


                        </LinearLayout>


                    </LinearLayout>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/interest_rs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:valueFrom="0.0"

                        android:valueTo="100.0"
                        app:haloColor="@color/primaryColor"
                        app:haloRadius="15dp"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/white"
                        app:thumbRadius="8dp"
                        app:thumbStrokeColor="@color/primaryColor"
                        app:thumbStrokeWidth="2dp"
                        app:trackColorActive="@color/primaryColor"
                        app:trackColorInactive="#e0e0e0" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loan_tenure"
                            android:textColor="@color/primaryColor"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ym_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="10dp" />
                        <EditText
                            android:id="@+id/tenure_et"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:backgroundTint="@color/primaryColor"
                            android:inputType="number"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">



                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tab_layoutym"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="@drawable/tab_ym_bg"
                                app:tabBackground="@drawable/tab_ym_selector"
                                app:tabIndicatorColor="@color/black"
                                app:tabIndicatorFullWidth="false"
                                app:tabIndicatorHeight="1dp"
                                app:tabSelectedTextColor="@color/white"
                                app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                                app:tabTextColor="@color/primaryColor"

                                />


                        </LinearLayout>


                    </LinearLayout>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/tenure_rs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:valueFrom="0"
                        android:valueTo="100"
                        app:haloColor="@color/primaryColor"
                        app:haloRadius="15dp"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/white"
                        app:thumbRadius="8dp"
                        app:thumbStrokeColor="@color/primaryColor"
                        app:thumbStrokeWidth="2dp"
                        app:trackColorActive="@color/primaryColor"
                        app:trackColorInactive="#e0e0e0" />


                </RelativeLayout>
                <Button
                    android:id="@+id/calculate_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/primaryColor"
                    android:text="@string/calculate"
                    android:textStyle="bold"

                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <include layout="@layout/emi_cal_bottom_sheet" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>