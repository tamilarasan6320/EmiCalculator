<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".NewBtTopupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_toolbar"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <ImageButton
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="toolbarclicked"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:backgroundTint="@color/white" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BT + TOPUP"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/tv1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculator"
                        android:layout_marginLeft="5dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/secondaryColor"
                        android:layout_toRightOf="@+id/tv1"
                        />

                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_symbol"
                            android:textColor="@color/primaryColor"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/sansregular"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginStart="3dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Design.TextInputLayout"
                            android:hint="@string/salary">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSalary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="14"
                                android:fontFamily="@font/sansregular"
                                android:inputType="number"
                                android:textSize="15dp"
                                />
                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_symbol"
                            android:textColor="@color/primaryColor"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginStart="3dp"
                            android:layout_gravity="center"
                            android:id="@+id/tilSanctionedAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Design.TextInputLayout"
                            android:hint="@string/hint_sanctioned_amount">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSanctionedAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="14"
                                android:fontFamily="@font/sansregular"
                                android:textSize="15dp"
                                android:inputType="number"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_symbol"
                            android:textColor="@color/primaryColor"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginStart="3dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Design.TextInputLayout"
                            android:hint="@string/current_balance">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etCurrentBalance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="14"
                                android:fontFamily="@font/sansregular"
                                android:textSize="15dp"
                                android:inputType="number"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_symbol"
                            android:textColor="@color/primaryColor"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginStart="3dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Design.TextInputLayout"
                            android:hint="@string/number_of_emi_paid">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etEMIPaid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="2"
                                android:fontFamily="@font/sansregular"
                                android:textSize="15dp"
                                android:inputType="number"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currency_symbol"
                                android:textColor="@color/primaryColor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textSize="20dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/bt_amount">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etBTAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="14"
                                    android:inputType="number"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currency_symbol"
                                android:textColor="@color/primaryColor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textSize="20dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/topup_amount">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etTopupAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="14"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    android:inputType="number"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/percentage"
                                android:textColor="@color/primaryColor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textSize="20dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/btroi">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etBTROI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="5"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    android:inputType="numberDecimal"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/percentage"
                                android:textColor="@color/primaryColor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textSize="20dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/top_roi">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etTopupROI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="14"
                                    android:inputType="number"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/bt_tenure">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etBTTenure"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="5"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    android:inputType="numberDecimal"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/top_up_tenure">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etTopupTenure"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="14"
                                    android:inputType="number"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currency_symbol"
                                android:textColor="@color/primaryColor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textSize="20dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/bt_amount">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etBTEMI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="14"
                                    android:inputType="number"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currency_symbol"
                                android:textColor="@color/primaryColor"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textSize="20dp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_marginStart="3dp"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.Design.TextInputLayout"
                                android:hint="@string/topup_amount">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etTopupEMI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="14"
                                    android:fontFamily="@font/sansregular"
                                    android:textSize="15dp"
                                    android:inputType="number"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_symbol"
                            android:textColor="@color/primaryColor"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_marginStart="3dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Design.TextInputLayout"
                            android:hint="@string/foir">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etFoir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="5"
                                android:fontFamily="@font/sansregular"
                                android:textSize="15dp"
                                android:inputType="number"
                                />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSave"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            app:icon="@drawable/ic_baseline_calculate_24"
                            android:backgroundTint="@color/secondary"
                            android:text="Save"
                            app:iconGravity="textStart"
                            android:layout_gravity="bottom"

                            />
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnHistory"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/ic_baseline_refresh_24"
                            app:icon="@drawable/ic_baseline_refresh_24"
                            android:backgroundTint="@color/primaryColor"
                            android:text="History"
                            app:iconGravity="textStart"
                            android:layout_gravity="bottom"

                            />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>